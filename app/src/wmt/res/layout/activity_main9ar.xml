<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                tools:context=".MainActivity9">

    <com.roger.lib.heartview.HeartView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        >

        <com.hanks.htextview.rainbow.RainbowTextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="@string/app_name2_wmt"
            android:textSize="20sp"
            app:colorSpace="150dp"
            app:colorSpeed="4dp"/>

        <com.hanks.htextview.typer.TyperTextView
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="type"
            app:charIncrease="3"
            app:typerSpeed="80"/>

        <com.hanks.htextview.fade.FadeTextView
            android:id="@+id/fade"
            android:layout_width="240dp"
            android:layout_height="50dp"
            android:gravity="left"
            android:letterSpacing="0.08"
            android:lineSpacingMultiplier="1.3"
            android:text="This is FadeTextView"
            android:textColor="#0f0"
            android:textSize="20sp"
            app:animationDuration="1500"/>


        <com.hanks.htextview.line.LineTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123456789/n My Love /n 哈哈哈我喜欢"
            android:textSize="16sp"
            app:animationDuration="3000"
            app:lineColor="#1367bc"
            app:lineWidth="4dp"
            />



        <com.hanks.htextview.scale.ScaleTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Scale"
            android:textSize="16sp"/>

        <com.hanks.htextview.evaporate.EvaporateTextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:paddingTop="8dp"
            android:text="Evaporate"
            android:textSize="20sp"/>

        <com.hanks.htextview.fall.FallTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:text="Fall"
            android:textSize="16sp"/>

